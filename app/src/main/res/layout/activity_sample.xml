<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Sample.SampleActivity">

    <com.ruffian.library.RVPIndicator
        android:id="@+id/sample_vp_indicator"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        app:indicator_color="@android:color/white"
        app:indicator_style="triangle"
        app:indicator_visible_count="2"
        app:indicator_width="16dp"
        app:text_color_normal="#bebdbd"
        app:text_color_selected="#ffffff"

        >

    </com.ruffian.library.RVPIndicator>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/sample_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>